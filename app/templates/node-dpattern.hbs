
<rect class="node_design" x="{{unbound view.x}}" 
                          y="{{unbound view.y}}" 
                          ry="7" 
                          rx="7" 
                          r="7" 
                          height="{{unbound view.height}}"
                          width="{{unbound view.width}}"></rect>

<text class="node_txt" x="{{unbound view.cx}}" y="{{unbound view.y}}">
  <tspan dy="16.8">
    {{elem.name}}
  </tspan>
  <tspan x="{{unbound view.cx}}" dy="16.8">
    {{elem.year}}
  </tspan>
  <tspan class="node_txt_auth" x="{{unbound view.cx}}" dy="16.8">
    {{elem.author}}
  </tspan>
</text>
