
<rect class="node_design" x="{{unbound node.x_padded}}" 
                          y="{{unbound node.y_padded}}" 
                          ry="7" 
                          rx="7" 
                          r="7" 
                          height="{{unbound node.height}}"
                          width="{{unbound node.width}}"></rect>

<text class="node_txt" x="{{unbound node.cx}}" y="{{unbound node.y_padded}}">
  <tspan dy="16.8">
    {{node.name}}
  </tspan>
  <tspan x="{{unbound node.cx}}" dy="16.8">
    {{node.year}}
  </tspan>
  <tspan class="node_txt_auth" x="{{unbound node.cx}}" dy="16.8">
    {{node.author}}
  </tspan>
</text>
