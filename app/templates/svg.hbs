
<!-- Debug grid -->
{{#if svgenv.showGrid}}
  {{#each line in gridLines}}
    <path d="{{unbound line}}" fill="none" class="grid_line"></path>
  {{/each}}
{{/if}}

<!-- Years lines -->
{{#each line in yearLines}}
  <text x="{{unbound line.x}}" y="{{unbound line.y}}" class="year_line_txt">
    <tspan dy="4.233003616333008">
      {{line.year}}
    </tspan>
  </text>
  <path d="{{unbound line.path}}" fill="none" class="year_line_path"></path>
{{/each}}

<!-- Column Headers -->
{{#each node in model.headers}}
  {{view 'svg-g' templateName='node-header' node=node}}
{{/each}}

<!-- parent to child -->
{{#each path in pathsToChildren}}
  <path d="{{unbound path}}" class="line"></path>
{{/each}}

<!-- bind nodes -->
{{#each path in pathsBoundNodes}}
  <path d="{{unbound path}}" class="line line-dashed" stroke-dasharray="5, 5"></path>
{{/each}}

<!-- Design Patterns -->
{{#each node in model.dpatterns}}
  {{view 'svg-g-click' templateName='node-dpattern' node=node}}
{{/each}}

<!-- Technologies -->
{{#each node in model.technologies}}
  {{#each className in node.classNames}}
    {{view 'svg-g-click' templateName='node-technology' 
                         node=node
                         classNameTech=className}}
  {{/each}}
{{/each}}

